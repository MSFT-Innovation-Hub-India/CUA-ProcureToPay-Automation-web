@model ERPWeb.Models.ContractHeader

@{
    ViewData["Title"] = "Contract Details";
}

<h1>Contract Details</h1>

<div class="card mb-4">
    <div class="card-header">
        <h4>Contract Header Information</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Contract ID:</dt>
            <dd class="col-sm-9">@Model.ContractId</dd>

            <dt class="col-sm-3">Supplier ID:</dt>
            <dd class="col-sm-9">@Model.SupplierId</dd>

            <dt class="col-sm-3">Contract Date:</dt>
            <dd class="col-sm-9">@Model.ContractDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Expiration Date:</dt>
            <dd class="col-sm-9">@Model.ExpirationDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Total Amount:</dt>
            <dd class="col-sm-9">@Model.TotalAmount.ToString("C")</dd>

            <dt class="col-sm-3">Currency:</dt>
            <dd class="col-sm-9">@Model.Currency</dd>

            <dt class="col-sm-3">Status:</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>
</div>

<h2>Contract Lines</h2>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Line ID</th>
            <th>Item ID</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
            <th>Delivery Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ContractLines) 
        {
            <tr>
                <td>@item.LineId</td>
                <td>@item.ItemId</td>
                <td>@item.ItemDescription</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@item.TotalPrice.ToString("C")</td>
                <td>@item.DeliveryDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ContractId" class="btn btn-primary">Edit Contract</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
